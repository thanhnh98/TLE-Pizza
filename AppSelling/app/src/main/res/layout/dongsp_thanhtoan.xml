<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgSanpham_thanhtoan"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tenSanPham_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Thanh"
        android:textSize="20sp"
        android:layout_toRightOf="@id/imgSanpham_thanhtoan" />

    <TextView
        android:id="@+id/giaSanPham_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgSanpham_thanhtoan"
        android:layout_below="@+id/tenSanPham_thanhtoan"
        android:text="120.000"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/loaiSanPham_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/giaSanPham_thanhtoan"
        android:layout_toRightOf="@id/imgSanpham_thanhtoan"
        android:text= "Nước uống"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/SoLuongSanPham_thanhtoan"
        android:layout_margin="10dp"

        android:layout_below="@+id/giaSanPham_thanhtoan"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Số lượng: 100"
        android:textSize="15sp">
    </TextView>


</RelativeLayout>